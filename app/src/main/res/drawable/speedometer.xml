<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/speedometer_bg_gradient" />

    <item
        android:id="@+id/item_speedometer_pointer"
        android:bottom="-8dp"
        android:gravity="center"
        android:left="30dp"
        android:top="10dp">

        <rotate
            android:drawable="@drawable/speedometer_pointer"
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="100%" />
    </item>

    <item
        android:id="@+id/item_speedometer_fake_empty_bg"
        android:bottom="-18dp"
        android:gravity="center"
        android:left="30dp">
        <rotate
            android:drawable="@drawable/speedometer_fake_empty_bg"
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="100%" />
    </item>

    <item
        android:bottom="-78dp"
        android:drawable="@drawable/speedometer_black_divider"
        android:gravity="center"
        android:top="90dp"
        android:left="30dp" />

    <item
        android:bottom="-200dp"
        android:drawable="@drawable/speedometer_fake_transparent_bottom"
        android:gravity="center"
        android:left="30dp" />

</layer-list>